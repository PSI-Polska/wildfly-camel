{
    "id": "wildfly-camel-rest",
    "kind": "Config",
    "apiVersion": "v1beta1",
    "name": "wildfly-camel-rest",
    "description": "Creates a Wildfly app server running the Camel Rest demo",
    "items": [
        {
            "apiVersion": "v1beta1",
            "containerPort": 8080,
            "id": "wildfly-camel-service",
            "kind": "Service",
            "port": 8081,
            "selector": {
                "name": "wildfly-camel-rest-pod"
            }
        },
        {
            "apiVersion": "v1beta1",
            "desiredState": {
                "podTemplate": {
                    "desiredState": {
                        "manifest": {
                            "containers": [
                                {
                                    "image": "wildflyext/example-camel-rest",
                                    "name": "wildfly-camel-rest-container",
                                    "imagePullPolicy": "PullIfNotPresent",
                                    "ports": [
                                        {
                                            "containerPort": 8080,
                                            "protocol": "TCP"
                                        }
                                    ]
                                }
                            ],
                            "id": "wildfly-camel-rest-pod",
                            "version": "v1beta1"
                        }
                    },
                    "labels": {
                        "name": "wildfly-camel-rest-pod"
                    }
                },
                "replicaSelector": {
                    "name": "wildfly-camel-rest-pod"
                },
                "replicas": 3
            },
            "id": "registry-controller",
            "kind": "ReplicationController",
            "labels": {
                "name": "wildfly-camel-rest-controller"
            }
        }
    ]
}
